<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:title="Notificações"
        app:key="notifications_category">

        <SwitchPreference
            app:key="nitifications"
            app:summary="Receba notificações sobre seus pedidos, produtos e promoções."
            app:title="Habilitar mensagens e notificações" />

    </PreferenceCategory>

    <PreferenceCategory
        app:title="Ajuda"
        app:key="help_category">

        <Preference
            app:key="feedback"
            app:summary="Aviso de problemas técnicos ou  envie sugestões de melhorias."
            app:title="Entrar em contato">

            <intent
                android:action="android.intent.action.VIEW"
                android:data="https://www.androidpro.com.br/contato" />

        </Preference>

    </PreferenceCategory>
</PreferenceScreen>